<section class="mx-auto mt-10 w-full flex-grow mb-10 max-w-[1200px] px-5">
    <div class="container mx-auto border px-5 py-5 shadow-sm md:w-1/2">
        <div class="">
            <p class="text-4xl font-bold">RESET PASSWORD</p>
            <p>Enter new password here to reset</p>
        </div>

        <form class="mt-6 flex flex-col" action="/users/reset-password/{{token}}" method="POST">
            <input type="hidden" name="token" value="{{token}}">
            <label class="mt-3" for="email">New Password</label>
            <input
            class="mt-3 border px-4 py-2"
            type="password"
            name="password"
            required
            />

            <label class="mt-3" for="email">Confirm Password</label>
            <input
            class="mt-3 border px-4 py-2"
            type="password"
            name="confirmPassword"
            required
            />
            
            {{#if error}}
            <div class="error-message text-xl text-center p-1 mb-4 text-red-700 font-bold">
                <p>{{error}}</p>
            </div>
            {{/if}}

            <button class="my-5 w-full bg-violet-900 py-2 text-white" type="submit">
                RESET
            </button>
        
        </form>


    </div>
</section>