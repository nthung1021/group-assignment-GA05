<div class="bg-[#f0e9e0] py-8 text-center">
    <h1 class="text-6xl text-[#8c7a6b] mt-8 mb-24">LOG IN</h1>
</div>

<form action="/users/login" method="POST">
    <div class="flex flex-col items-center justify-center my-20 mx-120 bg-orange-100">
        <input type="text" name="username" class="w-64 h-12 rounded-lg border-2 border-orange-400 m-2 px-2" placeholder="Userame" required>
        <input type="password" name="password" class="w-64 h-12 rounded-lg border-2 border-orange-400 m-2 px-2" placeholder="Password" required>
        {{#if error}}
        <div class="error-message text-center p-1 mb-4 text-red-700">
            <p>{{error}}</p>
        </div>
        {{/if}}
        <button type="summit" class="w-40 h-12 rounded-lg bg-orange-700 m-2 text-xl">Login</button>
    </div>
</form>
