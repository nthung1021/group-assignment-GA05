<!-- Login card  -->
<section class="mx-auto flex-grow w-full mt-10 mb-10 max-w-[1200px] px-5">
    <div class="container mx-auto border px-5 py-5 shadow-sm md:w-1/2">
    <div class="">
        <p class="text-4xl font-bold">LOGIN</p>
        <p>Welcome back, customer!</p>
    </div>

    <form class="mt-6 flex flex-col" action="/users/login" method="POST">
        <label for="email">Username</label>
        <input
        class="mb-3 mt-3 border px-4 py-2"
        type="text"
        name="username"
        id="username"
        value="{{username}}"
        required
        />

        <label for="email">Email Address</label>
        <input
        class="mb-3 mt-3 border px-4 py-2"
        type="email"
        name="email"
        required
        />

        <label for="email">Password</label>
        <input
        class="mt-3 border px-4 py-2"
        type="password"
        name="password"
        required
        />

        <div class="mt-4">
            <div class="flex gap-2 justify-items-start">
                <input type="checkbox" />
                <label for="checkbox">Remember me</label>
            </div>
            <a href="/users/forgot-password" class="text-violet-900 flex justify-end">Forgot password</a>
        </div>
        
        {{#if error}}
            <div class="error-message text-xl text-center p-1 mb-4 text-red-700 font-bold">
                <p>{{error}}</p>
            </div>
        {{/if}}

        <button type="submit" class="my-5 w-full bg-violet-900 py-2 text-white">
            LOGIN
        </button>

    </form>

    <p class="text-center text-gray-500">OR LOGIN WITH</p>

    <div class="my-5 flex gap-2">
        <button class="w-1/2 bg-blue-800 py-2 text-white">FACEBOOK</button>
        <button class="w-1/2 bg-orange-500 py-2 text-white">GOOGLE</button>
    </div>

    <p class="text-center">
        Don't have account?
        <a href="/users/register" class="text-violet-900">Register now</a>
    </p>
    </div>
</section>
<!-- /Login Card  -->
