<section class="mx-auto mt-10 w-full flex-grow mb-10 max-w-[1200px] px-5">
    <div class="container mx-auto border px-5 py-5 shadow-sm md:w-1/2">
    <div class="">
        <p class="text-4xl font-bold">FORGOT YOUR PASSWORD?</p>
        <p>Enter your email to login</p>
    </div>

    <form class="mt-6 flex flex-col" action="/users/forgot-password" method="POST">
        <label class="mt-3" for="email">Email Address</label>
        <input
        class="mt-3 border px-4 py-2"
        type="email"
        placeholder="user@mail.com"
        name="email"
        required
        />

        {{#if error}}
        <div class="error-message text-xl text-center p-1 mb-4 text-red-700 font-bold">
            <p>{{error}}</p>
        </div>
        {{/if}}
        {{#if success}}
        <div class="success-message text-xl text-center p-1 mb-4 text-green-700 font-bold">
            <p>{{success}}</p>
        </div>
        {{/if}}

        <button class="my-5 w-full bg-violet-900 py-2 text-white" type="submit">
            SEND EMAIL
        </button>
    
    </form>

    <p class="text-center">
        Remember your account now?
        <a href="/users/login" class="text-violet-900">Login now</a>
    </p>
    </div>
</section>
